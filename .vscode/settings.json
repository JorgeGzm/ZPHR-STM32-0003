{
    // "terminal.integrated.env.linux": {
    //     "ZEPHYR_BASE": "${HOME}/zephyrproject/zephyr",
    //     "ZEPHYR_SDK_INSTALL_DIR": "${HOME}/zephyr-sdk-0.16.5-1",
    // },
    // Cortex settings
    "cortex-debug.armToolchainPath": "${userHome}/zephyr-sdk-0.17.0/arm-zephyr-eabi/bin",
    "cortex-debug.openocdPath": "${userHome}/zephyr-sdk-0.17.0/sysroots/x86_64-pokysdk-linux/usr/bin/openocd",
    "cortex-debug.gdbPath": "${userHome}/zephyr-sdk-0.17.0/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb",
    "cortex-debug.armToolchainPrefix": "arm-zephyr-eabi",
    "cortex-debug.variableUseNaturalFormat": true,
    // C++ settings
    "cmake.configureOnOpen": false,
    "C_Cpp.default.defines": [
        "__CDT_PARSER__"
    ],
    "C_Cpp.default.forcedInclude": [
        "${workspaceFolder}/build/autoconf.h",
        "${workspaceFolder}/build/zephyr/include/generated/autoconf.h",
    ],
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "${ZEPHYR_BASE}/include/**"
    ],
    "C_Cpp.default.mergeConfigurations": true, // TESTE
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",

    // C/C++ inactive code style settings
    "C_Cpp.inactiveRegionOpacity": 1,
    "C_Cpp.inactiveRegionBackgroundColor": "#000000",
    "C_Cpp.inactiveRegionForegroundColor": "#ffffff",
    "editor.tabSize": 8,
    "editor.insertSpaces": false,
    "files.associations": {
      
    },
    
}
